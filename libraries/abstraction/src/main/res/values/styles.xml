<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChipTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabPaddingStart">@dimen/dimen_10</item>
        <item name="tabPaddingEnd">@dimen/dimen_10</item>
        <item name="tabBackground">@drawable/selector_chip_tab</item>
        <item name="tabSelectedTextColor">@color/colorMediumPurple</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
    </style>

    <style name="AppTabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IndicatorBullet">
        <item name="android:layout_width">@dimen/dimen_16</item>
        <item name="android:layout_height">@dimen/dimen_16</item>
        <item name="android:layout_marginStart">@dimen/dimen_5</item>
        <item name="android:layout_marginEnd">@dimen/dimen_5</item>
    </style>

    <dimen name="font_size_16">16sp</dimen>
</resources>